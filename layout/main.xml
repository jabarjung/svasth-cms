<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/svasth_always_better_logo_at_home_screen"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/svasth_always_better"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo_and_tagline"/>
    <!--
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/svasth_healthcare"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        android:typeface="sans"
        android:textColor="#A29845" />
										-->
    <Button
        android:id="@+id/btn"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/svasth_always_better_logo_at_home_screen"
        android:background="@drawable/red_button"
        android:layout_centerHorizontal="true"
        android:text="@string/connect"
        android:textColor="#A29845" />
    
    <TextView
        android:id="@+id/Copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="0dp"
        android:text="@string/copyright_info"
        android:layout_below="@id/btn"
        android:textColor="#A29845"
        android:textStyle="bold"
        android:textSize="12sp"
        android:contentDescription="@string/all_rights_reserved"/>

</RelativeLayout>